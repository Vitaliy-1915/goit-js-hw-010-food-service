{{#each this}}
<li class="menu__item ">
    <article class="card ">
        <img class="card__image" src="{{image}}" alt="{{name}}">
    </article>
    <div class="card__content ">

        <h2 class="card__name">{{name}}</h2>

        <p class="card__price ">
            <i class="material-icons card__price i">monetization_on</i>
            {{price}}
        </p>

        <p class="card__descr ">{{description}}</p>

        {{#each ingredients}}

        <ul class="tag-list">
            <li class="tag-list__item card__reviews">
                {{this}}
            </li>
        </ul>

        {{/each}}

    </div>
    <button class="card__button button">
        <i class="material-icons button__icon"> shopping_cart </i>

        В корзину
    </button>
</li>
{{/each}}